// 综合数组功能测试
函数 主() {
    // 测试数组字面量
    让 数组1 = [1, 2, 3]
    打印("初始数组: " + 数组1)
    
    // 测试数组长度
    让 长度 = 数组1.长度()
    打印("数组长度: " + 长度)
    
    // 测试数组索引访问
    让 第一个元素 = 数组1[0]
    打印("第一个元素: " + 第一个元素)
    
    // 测试数组添加元素
    数组1 = 数组1.添加(4)
    打印("添加后: " + 数组1)
    
    // 测试数组删除元素
    数组1 = 数组1.删除(1)  // 删除索引1的元素
    打印("删除后: " + 数组1)
    
    // 测试最终长度
    打印("最终长度: " + 数组1.长度())
}

主()